#!/bin/bash
#
ZPLG_HOME=$HOME/.zplugin
if [[ ! -d "$ZPLG_HOME" ]]; then
  mkdir -p "$ZPLG_HOME/bin"
  chmod g-rwX "$ZPLG_HOME"
  git clone --depth 10 https://github.com/zdharma/zplugin.git "$ZPLG_HOME/bin"
  zcompile "$ZPLG_HOME/bin/zplugin.zsh"
fi

source "$ZPLG_HOME/bin/zplugin.zsh"
autoload -Uz _zplugin

zplugin light zsh-users/zsh-completions
zplugin light djui/alias-tips
zplugin light greymd/docker-zsh-completion

zplugin light mafredri/zsh-async
zplugin light sindresorhus/pure

zplugin ice lucid wait"1" # 1 second after prompt
zplugin light zdharma/fast-syntax-highlighting

# zplugin light zsh-users/zsh-syntax-highlighting
# zplugin light zsh-users/zsh-history-substring-search

zplugin ice as"program" pick"bin/git-dsf"
zplugin light zdharma/zsh-diff-so-fancy

zplugin ice lucid wait'2' pick"*.plugin.zsh" atload'_zsh_autosuggest_start'
zplugin light zsh-users/zsh-autosuggestions

zplugin ice lucid wait'3' atload'_zsh_nvm_load'
zplugin light lukechilds/zsh-nvm

zplugin ice lucid wait'4'
zplugin load lukechilds/zsh-better-npm-completion

zplugin load zdharma/history-search-multi-word

# bindkey '^[[A' history-substring-search-up
# bindkey '^[[B' history-substring-search-down

